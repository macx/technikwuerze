{
  "name": "technikwuerze",
  "version": "3.0.13",
  "description": "Website of the first ever podcast for developers in Germany",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "pnpm run test && vite build && cp public/dist/.vite/manifest.json public/dist/manifest.json",
    "preview": "vite preview",
    "test": "pnpm run type-check && pnpm run format:check && vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,js,css,json,md,php}\"",
    "format:check": "prettier --check \"**/*.{ts,js,css,json,md,php}\"",
    "release": "release-it",
    "test:php": "find site -type f -name '*.php' -print0 | xargs -0 -n1 php -l >/dev/null",
    "release:patch": "release-it patch",
    "release:minor": "release-it minor",
    "release:major": "release-it major",
    "sync:pull:comments": "bash ops/sync-runtime-from-prod.sh comments",
    "sync:pull:audio": "bash ops/sync-runtime-from-prod.sh audio",
    "sync:pull:runtime": "bash ops/sync-runtime-from-prod.sh all",
    "sync:push:comments": "bash ops/sync-runtime-to-prod.sh comments",
    "sync:push:audio": "bash ops/sync-runtime-to-prod.sh audio",
    "sync:push:runtime": "bash ops/sync-runtime-to-prod.sh all"
  },
  "devDependencies": {
    "@prettier/plugin-php": "^0.22.2",
    "@types/node": "^22.10.2",
    "open": "^11.0.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vite-plugin-kirby": "^4.0.0",
    "vitest": "^2.1.8",
    "release-it": "^17.6.0"
  },
  "packageManager": "pnpm@10.30.1+sha512.3590e550d5384caa39bd5c7c739f72270234b2f6059e13018f975c313b1eb9fefcc09714048765d4d9efe961382c312e624572c0420762bdc5d5940cdf9be73a",
  "dependencies": {
    "@fontsource-variable/bricolage-grotesque": "^5.2.10",
    "@fontsource-variable/caveat": "^5.2.8",
    "@fontsource-variable/manrope": "^5.2.8",
    "@fontsource-variable/material-symbols-outlined": "^5.2.36"
  }
}
