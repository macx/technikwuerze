{
  "git": {
    "requireCleanWorkingDir": true,
    "requireUpstream": true,
    "requireBranch": "develop",
    "commitMessage": "chore(release): v${version}",
    "tagName": "v${version}",
    "push": true,
    "pushArgs": ["--follow-tags"]
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": false
  },
  "hooks": {
    "before:init": "pnpm run test"
  }
}
